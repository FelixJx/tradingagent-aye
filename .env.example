# Trading Agent Environment Variables Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# API Keys and Tokens (Required)
# =============================================================================

# Tushare API Token - Get from https://tushare.pro/
TUSHARE_TOKEN=your_tushare_token_here

# DashScope (Alibaba Cloud Qwen) API Key - Get from https://dashscope.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# DeepSeek API Key - Get from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Tavily Search API Key - Get from https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# OpenAI API Key (Optional) - Get from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Application Configuration
# =============================================================================

# Flask application settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Database configuration
DATABASE_URL=sqlite:///trading_agent.db

# =============================================================================
# Trading Configuration
# =============================================================================

# Default stock market (SH/SZ)
DEFAULT_MARKET=SH

# Risk management settings
MAX_POSITION_SIZE=0.1
STOP_LOSS_RATIO=0.05

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/trading_agent.log